<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/chapter_7_view_animation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Animation"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/chapter_7_frame_animation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frame Animation"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/chapter_7_layout_animation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Layout Animation"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/chapter_7_Activity_animation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Animation"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/chapter_7_property_animation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Property Animation"
        android:textAllCaps="false"/>
</LinearLayout>
